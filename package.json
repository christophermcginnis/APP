{
  "name": "circlecast",
  "private": true,
  "version": "0.1.0",
  "packageManager": "pnpm@9.1.2",
  "scripts": {
    "fix:deps": "node ./scripts/fix-dependency-package-jsons.mjs",
    "predev": "pnpm run fix:deps",
    "dev": "pnpm -r --parallel --filter \"@circlecast/*\" dev",
    "predev:web": "pnpm run fix:deps",
    "dev:web": "pnpm --filter @circlecast/web dev",
    "predev:api": "pnpm run fix:deps",
    "dev:api": "pnpm --filter @circlecast/api dev",
    "build": "pnpm -r build",
    "lint": "pnpm -r lint",
    "typecheck": "pnpm -r typecheck",
    "format": "pnpm -r exec prettier --write ."
  },
  "devDependencies": {
    "@types/eslint": "^8.56.9",
    "@typescript-eslint/eslint-plugin": "^7.7.1",
    "@typescript-eslint/parser": "^7.7.1",
    "eslint": "^8.57.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-import": "^2.29.1",
    "eslint-plugin-jsx-a11y": "^6.8.0",
    "eslint-plugin-react": "^7.34.1",
    "eslint-plugin-react-hooks": "^4.6.0",
    "prettier": "^3.2.5",
    "typescript": "^5.4.3"
  },
  "pnpm": {
    "overrides": {
      "debug@*": "4.3.4"
    }
  }
}
